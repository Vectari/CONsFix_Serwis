{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
